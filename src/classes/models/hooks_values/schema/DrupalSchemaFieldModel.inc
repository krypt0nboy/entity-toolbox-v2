<?php

/**
 * Class SchemaFieldModel
 */
class DrupalSchemaFieldModel extends SchemaRecursiveModel {
  /** {{@inheritdoc}} */
  public function __construct(array $args = array()) {
    $args = $this->mergeConstructArgs(
      array(
        'structure' => array(
          'description' => array(
            'type'     => 'string',
            'default'  => '%property_schemas_fields_description%',
            'unset if' => 'is_empty:c:'
          ),
          'type'        => array(
            'type'    => 'string',
            'default' => '%property_schemas_fields_type%',
          ),
          'serialize'   => array(
            'type'     => 'boolean',
            'default'  => '%property_schemas_fields_serialize%',
            'unset if' => 'false'
          ),
          'size'        => array(
            'type'     => 'string',
            'default'  => '%property_schemas_fields_size%',
            'unset if' => 0
          ),
          'not null'    => array(
            'type'     => 'boolean',
            'default'  => '%property_schemas_fields_not_null%',
            'unset if' => 'false'
          ),
          'default'     => array(
            'type'     => 'string|integer',
            'default'  => '%property_schemas_fields_default%',
            'unset if' => 'is_null:c:',
          ),
          'length'      => array(
            'type'     => 'integer',
            'default'  => '%property_schemas_fields_length%',
            'unset if' => 0
          ),
          'unsigned'    => array(
            'type'     => 'boolean',
            'default'  => '%property_schemas_fields_unsigned%',
            'unset if' => 'false'
          ),
          'precision'   => array(
            'type'     => 'integer',
            'default'  => '%property_schemas_fields_precision%',
            'unset if' => 0
          ),
          'scale'       => array(
            'type'     => 'integer',
            'default'  => '%property_schemas_fields_scale%',
            'unset if' => 0
          ),
          'binary'      => array(
            'type'     => 'boolean',
            'default'  => '%property_schemas_fields_binary%',
            'unset if' => 'false'
          ),
        )
      ),
      $args
    );
    parent::__construct($args);
  }

  /** {{@inheritdoc}} */
  protected function reprocessStructure($structure) {
    $replace = '%property_schemas_fields_' . $this->constructArgs['schema_type'] . '_';
    foreach ($structure as $key => $params) {
      if (!empty($params['default'])) {
        $default = &$structure[$key]['default'];
        $default = str_replace('%property_schemas_fields_', $replace, $default);
      }
    }

    return $structure;
  }

  protected function setStructure($structure) {
    $reprocessed = $this->reprocessStructure($structure);
    parent::setStructure($reprocessed); // TODO: Change the autogenerated stub
  }
}